@{
    ViewBag.Title = "Reset hasła";
    Layout = "_Layout";
}
@model PasswordReset2Model


@if (!Html.ViewData.ModelState.IsValid)
{
<div class="alert alert-danger" role="alert">
   @Html.ValidationSummary()
</div>
}

@if (@ViewBag.Info != null)
{
<div class="alert alert-success" role="alert">
   @ViewBag.Info
</div>
}


@if (@ViewBag.Error != null && @ViewBag.Error.Length > 0)
{
<div class="alert alert-danger" role="alert">
    @ViewBag.Error
</div>
}
else
{
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="display-6">Reset hasła</h1>
            <form method="post">
                <div class="form-group mt-3">
                    <label asp-for="Password">Hasło</label>
                    @Html.PasswordFor(m => m.Password, new {@class = "form-control", required = "required", placeholder = "********"})
                    <label asp-for="Password2">Powtórz hasło</label>
                    @Html.PasswordFor(m => m.Password2, new {@class = "form-control", required = "required", placeholder = "********"})
                </div>
                <button type="submit" class="btn btn-danger mt-3">Zmień</button>
            </form>
        </div>
        <div class="col-md-6 text-center">
            <img class="form-image d-none d-md-inline-block p-5" src="/images/light-bulb-idea-svgrepo-com.svg" alt="">
        </div>
    </div>
}