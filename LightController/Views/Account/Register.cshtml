@model RegisterModel
@{
    ViewBag.Title = "Rejestracja";
    Layout = "_Layout";
}


@if (!Html.ViewData.ModelState.IsValid)
{
<div class="alert alert-danger" role="alert">
   @Html.ValidationSummary()
</div>
}
@if (@Model.Info != null)
{
<div class="alert alert-success" role="alert">
   @Model.Info
</div>
}
<div class="row align-items-center">
    <div class="col-md-6">
        <h1 class="display-6">Rejestracja</h1>
        <form method="post">
            <div class="mb-2 mt-3">
                <label asp-for="Username">Nazwa użytkownika</label>
                @Html.TextBoxFor(m => m.Username, new {@class = "form-control", placeholder="Użytkownik", required="required"})
            </div>
            <div class="mb-2">
                <label asp-for="Password">Email</label>
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder="uzytkownik@domena.pl", required="required"})
            </div>
            <div class="mb-2">
                <label asp-for="Password">Hasło</label>
                @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder="Hasło", required="required"})
            </div>
            <div class="mb-2">
                <label asp-for="Password2">Powtórz hasło</label>
                @Html.PasswordFor(m => m.Password2, new {@class = "form-control", placeholder="Powtórz hasło", required="required"})
            </div>
            <button class="btn btn-danger" type="submit">Utwórz konto</button>
        </form>
    </div>
    <div class="col-md-6 text-center">
        <img class="form-image d-none d-md-inline-block p-5" src="/images/lamp-svgrepo-com.svg" alt="">
    </div>
</div>