@using Microsoft.CodeAnalysis.CSharp.Syntax
@model LoginModel
@{
    ViewBag.Title = "Logowanie";
    Layout = "_Layout";
}

@if (!Html.ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary()
    </div>
}

<div class="row align-items-center">
    <div class="col-md-6">
        <h1 class="display-6">Logowanie</h1>
        <form method="post">
            <div class="form-group mt-3">
                <label asp-for="UserName">Nazwa użytkownika</label>
                @Html.TextBoxFor(m => m.UserName, new {@class = "form-control", required = "required", placeholder="Użytkownik"})
                <label asp-for="Password">Hasło</label>
                @Html.PasswordFor(m => m.Password, new {@class = "form-control", required = "required", placeholder="********"})
            </div>
            <div class="form-group mt-3">
                <a asp-controller="Account" asp-action="PasswordReset">Nie pamiętam hasła</a>
            </div>
            <button type="submit" class="btn btn-danger mt-3">Zaloguj</button>
        </form>
    </div>
    <div class="col-md-6 text-center">
        <img class="form-image d-none d-md-inline-block p-5" src="/images/light-bulb-idea-svgrepo-com.svg" alt="">
    </div>
</div>


