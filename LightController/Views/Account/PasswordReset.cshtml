@{
    ViewBag.Title = "Reset hasła";
    Layout = "_Layout";
}
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model PasswordResetModel


@if (!Html.ViewData.ModelState.IsValid)
{
<div class="alert alert-danger" role="alert">
   @Html.ValidationSummary()
</div>
}

@if (@ViewBag.Info != null)
{
<div class="alert alert-success" role="alert">
   @ViewBag.Info
</div>
}



<div class="row">
    <div class="col-md-6">
        <h1 class="display-6">Resetowanie hasła</h1>
        <form method="post">
            <div class="mb-2">
                <label asp-for="Email">Adres email</label>
                @Html.TextBoxFor(m => m.Email, new {@class="form-control", placeholder="uzytkownik@domena.pl", required="required"})
            </div>
            <button class="btn btn-danger" type="submit">Wyślij</button>
        </form>
    </div>
    <div class="col-md-6">
            
    </div>
</div>
